{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch Development Toolkit",
			"type": "npm",
			"path": "./packages/vscode",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch Rust Toolkit",
			"type": "npm",
			"path": "./packages/rust-toolkit",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}